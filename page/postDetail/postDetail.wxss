/* page/postDetail/postDetail.wxss */

.detail-image{
    width: 100%;
    height: 350rpx;
}
.content{
  padding:10rpx 20rpx;
}

.detail-title{
    font-size: 40rpx;
    padding:20rpx 0 20rpx 20rpx;
    display: block;
}
.author{
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin:40rpx 0;
    align-content : center;
    padding:10rpx 20rpx;
}
.author-name{
  display: flex;
  align-items: center;
  font-weight: 300;
  color:#666;
}

.author-pic{
  width: 50rpx;
  height: 50rpx;
  margin-right:20rpx;
}
.detail-time{
  display: flex;
  align-items: center;
}
.detail-text{
  padding:30rpx;
  text-indent: 2em;
  font-size: 14px;
  line-height: 40rpx;
}

.tool{
  display: flex;
  justify-content: space-around;
  padding:20rpx 20%;
}
.tool-item{
  display: flex;
}
.tool-item image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
